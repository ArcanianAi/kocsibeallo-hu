<?php

/**
 * @file
 * Gallery custom module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_page_attachments().
 */
function gallery_custom_page_attachments(array &$attachments) {
  $route_name = \Drupal::routeMatch()->getRouteName();

  // Add custom CSS to gallery page
  if (strpos($route_name, 'view.index_gallery') === 0) {
    $attachments['#attached']['library'][] = 'porto/gallery_custom';
  }
}

/**
 * Implements hook_token_info().
 */
function gallery_custom_token_info() {
  $info['tokens']['node']['title-short'] = [
    'name' => t('Short title'),
    'description' => t('Title truncated to 53 characters for SEO'),
  ];
  $info['tokens']['node']['meta-description'] = [
    'name' => t('Meta description'),
    'description' => t('Auto-generated meta description with fallback from summary or body'),
  ];
  return $info;
}

/**
 * Implements hook_tokens().
 */
function gallery_custom_tokens($type, $tokens, array $data, array $options, \Drupal\Core\Render\BubbleableMetadata $bubbleable_metadata) {
  $replacements = [];

  if ($type == 'node' && !empty($data['node'])) {
    $node = $data['node'];
    foreach ($tokens as $name => $original) {
      if ($name == 'title-short') {
        $title = $node->getTitle();
        // Truncate to 53 chars to keep total title under 70 with " | Kocsibeallo.hu"
        if (mb_strlen($title) > 53) {
          $title = mb_substr($title, 0, 50) . '...';
        }
        $replacements[$original] = $title;
      }
      elseif ($name == 'meta-description') {
        $description = '';

        // Try to get summary first
        if ($node->hasField('body') && !$node->get('body')->isEmpty()) {
          $body = $node->get('body')->first();
          if ($body && !empty($body->summary)) {
            $description = $body->summary;
          }
          elseif ($body && !empty($body->value)) {
            // Fallback to body text if no summary
            $text = strip_tags($body->value);
            $text = preg_replace('/\s+/', ' ', $text); // Normalize whitespace
            $text = trim($text);
            // Truncate to 155 characters (optimal length for meta descriptions)
            if (mb_strlen($text) > 155) {
              $description = mb_substr($text, 0, 152) . '...';
            }
            else {
              $description = $text;
            }
          }
        }

        // Final fallback to title if still empty
        if (empty($description)) {
          $description = $node->getTitle();
        }

        $replacements[$original] = $description;
      }
    }
  }

  return $replacements;
}

/**
 * Implements hook_preprocess_facets_item_list().
 */
function gallery_custom_preprocess_facets_item_list(&$variables) {
  // Remove nofollow from internal facet links for better SEO
  foreach ($variables['items'] as &$item) {
    if (isset($item['value']['#url'])) {
      $url = $item['value']['#url'];
      // Only remove nofollow for internal URLs
      if ($url->isExternal() === FALSE) {
        $item['value']['#options']['attributes']['rel'] = '';
      }
    }
  }
}
