<?php

/**
 * @file
 * Redirects users to /admin after login.
 */

use Drupal\Core\Url;
use Drupal\user\UserInterface;
use Symfony\Component\HttpFoundation\RedirectResponse;

/**
 * Implements hook_user_login().
 */
function login_redirect_user_login(UserInterface $account) {
  // Get the current request.
  $request = \Drupal::request();

  // Only redirect if there's no specific destination set.
  if (!$request->query->has('destination')) {
    // Set redirect to /admin/content for content management.
    $url = Url::fromRoute('system.admin_content')->toString();
    $response = new RedirectResponse($url);
    $response->send();
    exit;
  }
}
