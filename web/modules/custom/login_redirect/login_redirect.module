<?php

/**
 * @file
 * Redirects users to /admin after login.
 */

use Drupal\Core\Form\FormStateInterface;
use Drupal\Core\Url;

/**
 * Implements hook_form_FORM_ID_alter() for user_login_form.
 */
function login_redirect_form_user_login_form_alter(array &$form, FormStateInterface $form_state, $form_id) {
  $form['#submit'][] = 'login_redirect_user_login_submit';
}

/**
 * Custom submit handler for user login form.
 */
function login_redirect_user_login_submit(array &$form, FormStateInterface $form_state) {
  // Redirect to /admin after successful login.
  $form_state->setRedirectUrl(Url::fromUri('internal:/admin'));
}
